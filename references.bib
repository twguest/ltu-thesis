@article{bisschop_stochastic_2017,
	title = {Stochastic effects in {EUV} lithography: random, local {CD} variability, and printing failures},
	volume = {16},
	issn = {1932-5150, 1932-5134},
	shorttitle = {Stochastic effects in {EUV} lithography},
	url = {https://www.spiedigitallibrary.org/journals/Journal-of-MicroNanolithography-MEMS-and-MOEMS/volume-16/issue-4/041013/Stochastic-effects-in-EUV-lithography--random-local-CD-variability/10.1117/1.JMM.16.4.041013.short},
