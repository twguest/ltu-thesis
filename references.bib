@article{morgan_x-ray_2012,
	title = {X-ray phase imaging with a paper analyser},
	volume = {100},
	doi = {10.1063/1.3694918},
	abstract = {We present a simple x-ray phase imaging method that utilizes the sample-induced distortion of a 
high contrast random intensity pattern to quantitatively retrieve the two-dimensional phase map at
the exit surface of a coherently illuminated sample. This reference pattern is created by placing a
sheet of sandpaper in the x-ray beam, with the sample-induced distortion observed after propagation
